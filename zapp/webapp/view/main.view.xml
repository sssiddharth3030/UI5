<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="zapp.opensource.com.zapp.controller.main"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <!-- This is a comment in HTML & XML -->
    <Page
        id="page"
        title="{i18n>title}"
        floatingFooter="true"
    >
        <!-- You can separate components into different views and call them like this -->
        <!-- <mvc:XMLView viewName="zapp.opensource.com.zapp.view.form" /> -->

        <VBox class="sapUiSmallMargin">
            <core:Fragment
                fragmentName="zapp.opensource.com.zapp.view.form"
                type="XML"
            />
        </VBox>

        <footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    text="Check"
                    type="Emphasized"
                    press="onCheck"
                />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
